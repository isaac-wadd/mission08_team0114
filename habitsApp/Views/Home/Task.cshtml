
@{
    ViewData["Title"] = ViewBag.pageTitle + " Task";
}

@model habitsApp.Models.Tasks

    <div>
        <form method="post" asp-controller="Home" asp-action="@ViewBag.formAction">
            @if (ViewBag.isEdit) {
                <input type="hidden" value="@Model.taskID" asp-for="taskID">
            }

            <div asp-validation-summary="All"></div>

            <label asp-for="TaskName">Task</label>
            <input asp-for="TaskName" /><br />

            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId">
                <option value="">Select a Category</option>
                @foreach (Category c in ViewBag.categories)
                {
                    <option value="@c.CategoryId">@c.CategoryDesc</option>
                }
            </select><br />

            <label asp-for="DueDate">Due Date</label>
            <input asp-for="DueDate" /><br />

            <label asp-for="Quadrant">Quadrant</label>
            <input asp-for="Quadrant" /><br />



            <label asp-for="Completed">Completed</label>
            <select asp-for="Completed">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select><br />



            <button type="submit">Submit</button>
        </form>
    </div>